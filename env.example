# Telegram Bot Token (required)
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# NockBlocks API Key (required)
# Get from NockBlocks team
NOCKBLOCKS_API_KEY=your_api_key_here

# Optional: Chat IDs to automatically receive alerts (comma-separated)
# Get your chat ID by messaging @userinfobot on Telegram
ALERT_CHAT_IDS=

# Optional: Alert when proofrate drops below this value (in MP/s)
PROOFRATE_ALERT_FLOOR=1.0

# Optional: Alert when proofrate rises above this value (in MP/s)
PROOFRATE_ALERT_CEILING=10.0

# Optional: How often to check metrics (in minutes)
MONITOR_INTERVAL_MINUTES=5

# Optional: Subscription pricing (Telegram Stars)
SUBSCRIPTION_PRICE_STARS=1500
SUBSCRIPTION_DURATION_DAYS=365
